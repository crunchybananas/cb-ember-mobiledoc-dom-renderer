<div class="container">
  <div>
    <h4>Toolbar Example</h4>
    <Mobiledoc::Editor
      @content={{this.content}}
      @postDidChange={{this.postDidChange}}
      @editorDidLoad={{this.editorDidLoad}}
    >
      <:toolbar>
        <div class="toolbar">
          <div class="toolbar-section">
            <button data-action="toggleSection" data-args="h1" type="button">H1</button>
            <button data-action="toggleSection" data-args="h2" type="button">H2</button>
            <button data-action="toggleSection" data-args="blockquote" type="button">Quote</button>
          </div>
          <div class="toolbar-section">
            <button data-action="toggleMarkup" data-args="strong" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M15.6 10.79c.97-.67 1.65-1.77 1.65-2.79 0-2.26-1.75-4-4-4H7v14h7.04c2.09 0 3.71-1.7 3.71-3.79 0-1.52-.86-2.82-2.15-3.42zM10 6.5h3c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5h-3v-3zm3.5 9H10v-3h3.5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5z"></path>
                <path d="M0 0h24v24H0z" fill="none"></path>
              </svg>
            </button>
            <button data-action="toggleMarkup" data-args="em" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M0 0h24v24H0z" fill="none"></path>
                <path d="M10 4v3h2.21l-3.42 8H6v3h8v-3h-2.21l3.42-8H18V4z"></path>
              </svg>
            </button>
          </div>
          <div class="toolbar-section">
            <button data-action="toggleSection" data-args="ul" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M4 10.5c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5 1.5-.67 1.5-1.5-.67-1.5-1.5-1.5zm0-6c-.83 0-1.5.67-1.5 1.5S3.17 7.5 4 7.5 5.5 6.83 5.5 6 4.83 4.5 4 4.5zm0 12c-.83 0-1.5.68-1.5 1.5s.68 1.5 1.5 1.5 1.5-.68 1.5-1.5-.67-1.5-1.5-1.5zM7 19h14v-2H7v2zm0-6h14v-2H7v2zm0-8v2h14V5H7z"></path>
                <path fill="none" d="M0 0h24v24H0V0z"></path>
              </svg>
            </button>
            <button data-action="toggleSection" data-args="ol" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M2 17h2v.5H3v1h1v.5H2v1h3v-4H2v1zm1-9h1V4H2v1h1v3zm-1 3h1.8L2 13.1v.9h3v-1H3.2L5 10.9V10H2v1zm5-6v2h14V5H7zm0 14h14v-2H7v2zm0-6h14v-2H7v2z"></path>
                <path d="M0 0h24v24H0z" fill="none"></path>
              </svg>
            </button>
          </div>
          <div class="toolbar-section">
            <button data-action="setAttribute" data-args="text-align,left" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M15 15H3v2h12v-2zm0-8H3v2h12V7zM3 13h18v-2H3v2zm0 8h18v-2H3v2zM3 3v2h18V3H3z"></path>
                <path d="M0 0h24v24H0z" fill="none"></path>
              </svg>
            </button>
            <button data-action="setAttribute" data-args="text-align,center" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M7 15v2h10v-2H7zm-4 6h18v-2H3v2zm0-8h18v-2H3v2zm4-6v2h10V7H7zM3 3v2h18V3H3z"></path>
                <path d="M0 0h24v24H0z" fill="none"></path>
              </svg>
            </button>
            <button data-action="setAttribute" data-args="text-align,right" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M3 21h18v-2H3v2zm6-4h12v-2H9v2zm-6-4h18v-2H3v2zm6-4h12V7H9v2zM3 3v2h18V3H3z"></path>
                <path d="M0 0h24v24H0z" fill="none"></path>
              </svg>
            </button>
            <button data-action="setAttribute" data-args="text-align,justify" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M3 21h18v-2H3v2zm0-4h18v-2H3v2zm0-4h18v-2H3v2zm0-4h18V7H3v2zm0-6v2h18V3H3z"></path>
                <path d="M0 0h24v24H0z" fill="none"></path>
              </svg>
            </button>
          </div>
        </div>
      </:toolbar>
    </Mobiledoc::Editor>
  </div>
  <div>
    <h4>Toolbar JSON Content</h4>
    <div class="json-content">
      {{this.jsonContent}}
    </div>
  </div>
</div>